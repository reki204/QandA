<div>
  <h2>アドバイス編集ページ</h2>
  <%= form_with(model: [@question, @answer], local: true) do |f| %>
    <div class="form-group">
      <div class="form-group">
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>