<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card login">
      <div class="card-body">
        <h2 class="text-center">新規質問投稿</h2>
        <% if @question.errors.any? %>
          <div>
            <h2><%= pluralize(@question.errors.count, "error") %>prohibited this object from being saved: not successfully</h2>
            <ul>
              <% @question.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

          <%= form_with model: @question, local: true do |f| %>
            <div class="form-group">
              <label for="validationServer01" class="form-label">タイトル</label>
              <%= f.text_field :title, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label for="validationServer01" class="form-label">質問文</label>
              <%= f.text_area :body, size: "20x10",class: 'form-control' %>
            </div>

            <div class="form-group">
              <label for="validationServer01" class="form-label">画像</label>
              <%= f.file_field :image, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label for="validationServer01" class="form-label">ジャンル</label>
              <%= f.text_field :genre, class: 'form-control' %>
            </div>

              <%= f.submit "投稿", class: 'btn' %>
          <% end %>
      </div>
    </div>
  </div>
</div>