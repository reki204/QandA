<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card login">
      <div class="card-body">
        <h2 class="text-center">編集ページ</h2>
        
          <%= form_with model: @question, local: true do |f| %>
            <div class="form-group">
              <label for="validationServer01" class="form-label">タイトル</label>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="validationServer01" class="form-label">質問文</label>
              <%= f.text_area :body, size: "20x10",class: 'form-control'  %>
            </div>
            <div class="form-group">
              <label for="validationServer01" class="form-label">画像</label>
              <%= f.file_field :image, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="validationServer01" class="form-label">ジャンル</label>
              <%= f.text_field :genre, class: 'form-control' %>
            </div>
            <%= f.submit "更新", class: 'btn' %>
          <% end %>
      </div>
    </div>
  </div>
</div>