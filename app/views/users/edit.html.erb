<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card login">
      <div class="card-body">
        <h2 class="text-center">編集ページ</h2>

        <%= form_with model: @user, local: true do |f| %>

          <div class="form-group">
            <label for="validationServer01" class="form-label">ユーザーネーム</label>
            <%= f.text_field :username, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="validationServer01" class="form-label">プロフィール</label>
            <%= f.text_area :profile,  size: "10x5",class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="validationServer01" class="form-label">プロフィール画像</label>
            <%= f.file_field :image, class: 'form-control' %>
          </div>

          <%= f.submit "更新",class: 'btn' %>

        <% end %>
      </div>
    </div>
  </div>
</div>