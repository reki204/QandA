<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card login">
      <div class="card-body">
        <h2 class="text-center">新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <div class="form-group">
              <label for="validationServer01" class="form-label">ユーザーネーム</label><br />
              <%= f.text_field :username, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label for="validationServer01" class="form-label">メールアドレス</label><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label for="validationServer01" class="form-label">パスワード</label>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>

          <div class="field">
            <div class="form-group">
              <label for="validationServer01" class="form-label">確認パスワード</label><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'btn'%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>